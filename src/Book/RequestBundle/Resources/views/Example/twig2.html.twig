{% extends 'BookRequestBundle:Example:base.html.twig' %}

{% block title %}My cool blog posts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/contact.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/bookrequest/css/test.css', version="3", absolute=true) }}" rel="stylesheet" />
{% endblock %}

{% block sidebar %}
    <h3>Table of Contents</h3>
    {{ parent() }}
{% endblock %}

{% block body %}
    {% for entry in blog_entries %}
        <h2>{{ entry.title }}</h2>
        <p>{{ entry.body }}</p>
    {% endfor %}
{% endblock %}